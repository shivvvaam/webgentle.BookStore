@model Webgentle.BookStore.Models.ChangePasswordModel

@{
    ViewData["Title"] = "ChangePassword";
}

<h1 class="h1 mb-3">Change Password</h1>

<hr />
<div class="row align-content-xl-center">
    <div class="col-md-4 mb-3">

        @if (ViewBag.IsSuccess == true)
        {
            <div class="alert alert-success" role="alert" >
                Password has been updated successfully
            </div>
        }

        <form asp-action="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label mb-3"></label>
                <input asp-for="CurrentPassword" class="form-control mb-3" />
                <span asp-validation-for="CurrentPassword" class="text-danger mb-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label mb-3"></label>
                <input asp-for="NewPassword" class="form-control mb-3" />
                <span asp-validation-for="NewPassword" class="text-danger mb-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label mb-3"></label>
                <input asp-for="ConfirmNewPassword" class="form-control mb-3" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger mb-3"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change Password" class="btn btn-primary mb-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

